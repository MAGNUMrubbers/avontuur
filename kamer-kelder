def kelder(state):
    print("\nJe daalt af naar de donkere kelder...")
    print("Er beweegt iets in de schaduw...")
    if not state["monster_verslagen"]:
        keuze = input("Wil je vluchten of het monster aanvallen? (vluchten/aanvallen): ").lower()
        if keuze == "vluchten":
            return "hal"
        elif keuze == "aanvallen":
            if state["heeft_mes"]:
                print("Je verslaat het monster met je mes!")
                state["monster_verslagen"] = True
                return "kelder"
            else:
                print("Je hebt geen wapen... het monster grijpt je!")
                return "verloren"
        else:
            print("Je twijfelt te lang...")
            return "verloren"
    else:
        print("Het karkas van het monster ligt levenloos op de grond.")
        return input("Waarheen nu? (hal): ").lower() or "hal"
